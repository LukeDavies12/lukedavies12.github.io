---
import "@fontsource/inter";

const { title, headerText } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <div class="container px-2 mx-auto my-9">
        <article>
            <nav class="flex gap-5 my-8 px-5 py-2 bg-neutral-100 rounded-xl">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/projects">Projects</a>   
                <a href="/blog">Blog</a>
            </nav>
            <h1 class="mb-8">{headerText}</h1>
            <slot />
        </article>
    </div>
</body>
</html>

<style is:global>
    h1 {
        @apply font-extrabold text-2xl lg:text-3xl;
    }

    html {
        @apply text-lg;
        font-family: "Inter", sans-serif;
    }
    
    article {
        @apply w-full mx-auto md:w-3/4 lg:w-1/2;
    }

    a {
        @apply text-blue-900 underline;
    }
</style>

<style>
    nav a {
        @apply p-2;
    }
</style>