---
import "@fontsource/ibm-plex-serif";

const { title, headerText } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <div class="container px-2 mx-auto my-4">
        <article>
            <nav class="flex gap-4 my-5">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/projects">Projects</a>   
                <a href="/blog">Blog</a>
            </nav>
            <h1 class="mb-8">{headerText}</h1>
            <slot />
        </article>
    </div>
</body>
</html>

<style is:global>
    h1 {
        @apply font-bold text-3xl lg:text-4xl;
    }

    h2 {
        @apply font-bold text-xl lg:text-2xl mb-2;
    }

    html {
        font-family: "IBM Plex Serif", serif;
        @apply text-lg;    
    }
    
    article {
        @apply w-full mx-auto md:w-3/4 lg:w-1/2;
    }

    a {
        @apply text-neutral-600 underline;
    }
</style>

<style>
    nav a {
        @apply p-1;
    }
</style>